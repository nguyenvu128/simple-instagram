{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES6",
    "outDir": "dist",
    "baseUrl": "./src",
    "types": ["reflect-metadata"],
    "lib": ["ESNext"],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
